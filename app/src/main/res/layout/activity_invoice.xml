<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_header" />

    <RadioGroup
        android:id="@+id/radiogroup_invoice"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radiobutton_need_invoice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:checked="true"
            android:layout_height="wrap_content"
            android:text="需要发票" />

        <RadioButton
            android:id="@+id/radiobutton_inneed_invoice"
            android:layout_width="0dp"
             android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="不需要发票" />
    </RadioGroup>

    <EditText
        android:id="@+id/edittext_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="请输入发票抬头"
        android:background="@drawable/image_rounded_shape"
        android:padding="10dp"
        android:textColor="@color/common_tv_black"
        android:textSize="@dimen/tv_textsize16" />
<View 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    />
    <Button
        android:id="@+id/button_sure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/red_rounded_shape"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_textsize18" />

</LinearLayout>