<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_header" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:paddingBottom="15dp"
        android:paddingTop="15dip" >

        <LinearLayout
            android:id="@+id/tv_tab_0"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tab_name0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textColor="@color/tv_tips_prodetail"
                android:textSize="@dimen/tv_textsize15" />

            <TextView
                android:id="@+id/tv_tab_num0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="0"
                android:textColor="@color/tv_tips_prodetail"
                android:textSize="@dimen/tv_textsize12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_tab_1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tab_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评"
                android:textColor="@color/tv_gray_prodetail"
                android:textSize="@dimen/tv_textsize15" />

            <TextView
                android:id="@+id/tv_tab_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="0"
                android:textColor="@color/tv_gray_prodetail"
                android:textSize="@dimen/tv_textsize12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_tab_2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tab_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中评"
                android:textColor="@color/tv_gray_prodetail"
                android:textSize="@dimen/tv_textsize15" />

            <TextView
                android:id="@+id/tv_tab_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="0"
                android:textColor="@color/tv_gray_prodetail"
                android:textSize="@dimen/tv_textsize12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_tab_3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tab_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="差评"
                android:textColor="@color/tv_gray_prodetail"
                android:textSize="@dimen/tv_textsize15" />

            <TextView
                android:id="@+id/tv_tab_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="0"
                android:textColor="@color/tv_gray_prodetail"
                android:textSize="@dimen/tv_textsize12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_tab_4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tab_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晒图"
                android:textColor="@color/tv_gray_prodetail"
                android:textSize="@dimen/tv_textsize15" />

            <TextView
                android:id="@+id/tv_tab_num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="0"
                android:textColor="@color/tv_gray_prodetail"
                android:textSize="@dimen/tv_textsize12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" >

        <View
            android:id="@+id/cursor"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/tv_tips_prodetail" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>