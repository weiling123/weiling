<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_book_list"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imageview_book_name"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/textview_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageview_book_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="一品芝麻狐"
            android:textColor="@color/common_tv_black"
            android:textSize="@dimen/tv_textsize16" />

        <TextView
            android:id="@+id/textview_book_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="*1"
            android:textColor="@color/common_tv_black"
            android:textSize="@dimen/tv_textsize14" />

        <TextView
            android:id="@+id/textview_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="￥35.00"
            android:textColor="@color/tv_dark_red"
            android:textSize="@dimen/tv_textsize16" />

        <TextView
            android:id="@+id/textview_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textview_book_name"
            android:layout_centerVertical="true"
            android:background="@drawable/white_rounded_shape"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="赠品"
            android:textColor="@color/common_red_bg"
            android:textSize="@dimen/tv_textsize13"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textview_present_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
             android:layout_alignLeft="@id/textview_book_name"
            android:textColor="@color/common_dark_red"
            android:textSize="@dimen/tv_textsize11"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>