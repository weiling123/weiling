<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/group_book_pad"
    android:paddingRight="@dimen/group_book_pad"
    android:background="@color/common_gray_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="@dimen/group_book_item_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp" >

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_icon_4" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLength="10"
            android:singleLine="true"
            android:text="如果想过1%的生活"
            android:textColor="#888888"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="￥"
                android:textColor="@color/tv_tips_prodetail"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="46.00"
                android:textColor="@color/tv_tips_prodetail"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/discount_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="￥7.00"
                android:textColor="#888888"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/group_book_divider_pad"
        android:id="@+id/divider"
        android:gravity="center"
        android:layout_width="@dimen/group_book_divider_width"
        android:layout_height="match_parent"
        android:orientation="vertical" >

         <View
             android:layout_marginBottom="10dp"
             android:layout_marginTop="10dp"
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#999"
          /> 

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下\n一\n场"
            android:textColor="#9F9F9F"
            android:textSize="10sp" />

         <View
             android:layout_marginBottom="10dp"
             android:layout_marginTop="10dp"
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#999"
          /> 
    </LinearLayout>

</LinearLayout>