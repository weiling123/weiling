<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="改变购物车数量"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/layout_addplue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_rounded_shape"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialogtextview_minus"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="-"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_line" />

        <EditText
            android:id="@+id/dialogtextview_account"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/image_rounded_shape"
            android:text="0"
            android:maxLength="5"
            android:singleLine="true"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/dialogtextview_plus"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="+"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_N"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/image_rounded_shape"
            android:gravity="center"
            android:text="取消"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_Y"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/image_rounded_shape"
            android:gravity="center"
            android:text="确定"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>