<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <TextView 
        android:id="@+id/textview_ruleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="@dimen/tv_textsize12"
        android:background="@drawable/red_rounded_shape"
        android:text="正品"
        />
    <TextView 
        android:id="@+id/textview_ruleNm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/common_dark_black"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/tv_textsize14"
        android:gravity="center_vertical"
        android:text="正品"
        />

</LinearLayout>
